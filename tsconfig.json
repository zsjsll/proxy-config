{
  "typeRoots": ["./node_modules/@types", "./@types", "./types"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "removeComments": true,
    "checkJs": false,
    "allowJs": true,
    "outDir": "./dist"
  }
}
